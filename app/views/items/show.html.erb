<div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button aria-controls="navbar" aria-expanded="false" class="navbar-toggle collapsed" data-target="#navbar" data-toggle="collapse" type="button"><span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span></button> <%= link_to 'ShopSJSU', root_path , :class=>'navbar-brand', :id=>'linkcolor'%>
                </div>
                <div class="navbar-collapse collapse" id="navbar">
                    <div class="navbar-form navbar-right">
                        <div class="text-of-email">
                            <%= link_to current_user.email , users_dashboard_path ,:class=>'link-hover-color' %>
                        </div>
                        <div class="text-of-email">
                            <%= link_to "Log out", destroy_user_session_path,:class=>'link-hover-color', method: :delete %>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="content-wrapper">
                <div class="item-container">
                    <div class="container">
                        <div class="col-md-12">
                            <div class="product col-md-3 service-image-left">
                                <center>
                                    <%= image_tag @item.image.url , :id=>'item-display', :alt=>"" , :style=>"width:200px; height:200px;padding:8px;" %>
                                </center>
                            </div>
                            <div class="container service1-items col-sm-2 col-md-2 pull-left">
                                <center>
                                    <a class="service1-item" id="item-1"><%= image_tag @item.image.url , :id=>'item-display', :alt=>"" , :style=>"width:100px; height:100px;padding:8px;" %></a> <a class="service1-item" id="item-2"><%= image_tag @item.image.url , :id=>'item-display', :alt=>"" , :style=>"width:100px; height:100px; padding:8px;" %></a> <a class="service1-item" id="item-3"><%= image_tag @item.image.url , :id=>'item-display', :alt=>"" , :style=>"width:100px; height:100px;padding:8px;" %></a>
                                </center>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="product-title">
                                <h2><%= @item.name%></h2>
                            </div>
                            <div class="product-desc"></div>
                            <div class="product-rating">
                                <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i>
                            </div>
                            <hr>
                            <div class="product-price">
                                <%= @item.price%>
                            </div>
                            <div class="product-stock">
                                In Stock
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="col-md-12 product-info">
                        <ul class="nav nav-tabs nav_tabs" id="myTab">
                            <li class="active">
                                <a data-toggle="tab" href="#service-one">DESCRIPTION</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#service-two">PRODUCT INFO</a>
                            </li>
                            <li>
                                <a data-toggle="tab" href="#service-three">REVIEWS</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade in active" id="service-one">
                                <section class="container product-info">
                                    <%= @item.description%>
                                </section>
                            </div>
                            <div class="tab-pane fade" id="service-two">
                                <section class="container"></section>
                            </div>
                            <div class="tab-pane fade" id="service-three"></div>
                        </div>
                        <hr>
                    </div>
                </div>
                <div class="btn-group cart">
                    <button class="btn btn-success" style="margin-bottom:50px; width:120px;" type="button"><%= link_to 'Edit Item', edit_item_path(@item),:class=>'link-hover-color', :style=>'color:#FFFFFF; text-decoration:none;' %></button>
                </div>
            </div>
        </div>
    </div>