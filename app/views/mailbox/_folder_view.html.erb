<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12", style="margin-bottom:10px;">
    <!-- we'll configure this to compose new conversations later -->
    <%= link_to "Compose", new_conversation_path, class: "btn btn-success" ,:style => "color: #FFFFFF;"%>
    <div class="spacer"></div>
  </div>
  
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if is_conversation %>
            <%= render 'conversations/form' %>
        <% else %>
         <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
      </div>
    </div>
  </div>

</div>